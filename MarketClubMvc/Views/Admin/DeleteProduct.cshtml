@model MarketClubMvc.Models.Product
@using Microsoft.AspNetCore.Mvc.Localization;

@inject IViewLocalizer Localizer;

@{
    ViewData["Title"] = "DeleteProduct";
}

<h1 class="text-center">@Localizer["DeleteProductTitle"]</h1>

<div class="container">
    <div class="row justify-content-center text-center">
        <hr />
        <dl class="row">
                <dt class = "mt-3">
                    @Localizer["IdTitle"]
                </dt>
                <dd class = "mt-2">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="mt-3">
                    @Localizer["NameTitle"]
                </dt>
                <dd class="mt-2">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="mt-3">
                    @Localizer["DescriptionTitle"]
                </dt>
                <dd class="mt-2">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                 <dt class="mt-3">
                    @Localizer["PriceTitle"]
                </dt>
                <dd class="mt-2">
                    @Html.DisplayFor(model => model.Price)
                </dd>
        </dl>
        <div>
            <p class="fw-bold">@Localizer["ImageTitle"] </p>
            <img class="" src="@Model.ImageUri?v=@DateTime.Now.Ticks" style="width: 10rem; height:10rem" />
        </div>
    </div>

    <form asp-action="DeleteProductConfirm" asp-controller="Admin" asp-route-id="@Model.Id" class="text-center mt-5">
        <input type="hidden" name="productName" value="@Model.Name"/>
        <input type="submit" value="@Localizer["DeleteButton"]" class="btn btn-danger" />
    </form>
</div>
