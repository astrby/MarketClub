<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Market Club</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MarketClubMvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 pt-3">
            <div class="container-fluid">
                <a asp-controller="Product" asp-action="AllProducts" class="d-flex text-decoration-none">
                    <img src="/images/logo.png" style="width:2.5rem"/>
                    <h4 class="text-black mt-1 ms-2">MarketClub</h4>
                </a>
                <partial name="~/Views/Shared/_SearchbarPartial.cshtml"/>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <partial name="~/Views/Shared/_NavbarPartial.cshtml"/>
            </div>
        </nav>
    </header>
    <div class="container">
        <div style="height: 1rem">
            @{
                var successMessage = TempData["successMessage"]?.ToString();
                var errorMessage = TempData["errorMessage"]?.ToString();
            }
            @if (!string.IsNullOrWhiteSpace(@successMessage))
            {
                {
                    <div class="alert alert-success col-8 col-sm-6 text-center mx-auto" id="alert">
                        @TempData["successMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" />
                    </div>
                }
            }
            @if (!string.IsNullOrWhiteSpace(errorMessage))
            {
                {
                    <div class="alert alert-danger col-8 col-sm-6 text-center mx-auto" id="alert">
                        @TempData["errorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" />
                    </div>
                }
            }
        </div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - MarketClubMvc 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/alert.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
